AWSTemplateFormatVersion: "2010-09-09"
Resources:
  NSEXPQUEUE:
    Type: AWS::CloudFormation::Stack
    Properties:
      TemplateURL:
        Fn::Transform:
          Name: fnMacroS3
      Parameters:
        RSCKEY: "EXP-SHOP-QUEUE"
        RSCTYPE: "NAME"
  NSCBQUEUE:
    Type: AWS::CloudFormation::Stack
    Properties:
      TemplateURL:
        Fn::Transform:
          Name: fnMacroS3
      Parameters:
        RSCKEY: "EXP-CB-QUEUE"
        RSCTYPE: "NAME"
  EXPQUEUE:
    Type: AWS::SQS::Queue
    Properties:   
      QueueName : !GetAtt NSEXPQUEUE.Outputs.RSCID
      FifoQueue : true 
      VisibilityTimeout : 300
  CBQUEUE:
    Type: AWS::SQS::Queue
    Properties:   
      QueueName : !GetAtt NSCBQUEUE.Outputs.RSCID
      VisibilityTimeout : 300
  EXPQUEUEPOLICY:
    Type: AWS::SQS::QueuePolicy
    Properties: 
      Queues: 
        - !Ref EXPQUEUE
        - !Ref CBQUEUE
      PolicyDocument: 
        Statement: 
          - 
            Action: 
              - "SQS:SendMessage" 
              - "SQS:ReceiveMessage"
            Effect: "Allow"
            Resource: "*"
            Principal:  "*"
